    const posts =  [...await Astro.glob('../blog/*.mdx')].sort((a, b) => new Date(b.frontmatter?.date) - new Date(a.frontmatter?.date));
    return [
            ... new Set(posts.map(post => post.frontmatter.tags)
            .flat()
            .map(tag => tag.toLowerCase().replaceAll(" ", "-")))
        ]
        .map(tag => {return {params: {topic: tag}}});
